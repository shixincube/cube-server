<?xml version="1.0" encoding="UTF-8"?>
<!-- Cell Cloud 容器配置文件 -->
<cell>
	<!-- 容器监听器 -->
	<listeners>
		<class>cube.service.ServiceCarpet</class>
	</listeners>
	
	<!-- 内核参数配置 -->
	<nucleus>

		<!-- 对终端进行心跳保持请求的间隔，单位：毫秒 -->
		<heartbeat>60000</heartbeat>

		<!-- Talk 服务配置 -->
		<talk>
			<!-- 服务器参数配置 -->
			<server>
				<!-- 服务绑定的地址 -->
				<host>0.0.0.0</host>
				<!-- 服务绑定的端口号 -->
				<port>6000</port>
				<!-- 最大允许连接数 -->
				<max-connection>1000</max-connection>
			</server>

			<!-- WS 服务器参数配置 -->
			<ws-server></ws-server>

			<!-- WSS 服务器参数配置 -->
			<wss-server></wss-server>

			<!-- SSL 配置 -->
			<ssl></ssl>
		</talk>

		<!-- 日志配置 -->
		<log>
			<!-- 日志等级 -->
			<level>DEBUG</level>
		</log>
	</nucleus>

	<!-- Cellet 配置 -->
	<cellets>
		<cellet port="6000">
			<class>cube.service.client.ClientCellet</class>
		</cellet>
		<cellet port="6000">
			<class>cube.service.auth.AuthServiceCellet</class>
		</cellet>
		<cellet port="6000">
			<class>cube.service.contact.ContactServiceCellet</class>
		</cellet>
		<cellet port="6000" jar="cellets/cube-service-filestorage-3.0.jar">
			<class>cube.service.filestorage.FileStorageServiceCellet</class>
		</cellet>
		<cellet port="6000" jar="cellets/cube-service-fileprocessor-3.0.jar">
			<class>cube.service.fileprocessor.FileProcessorServiceCellet</class>
		</cellet>
		<cellet port="6000" jar="cellets/cube-service-messaging-3.0.jar">
			<class>cube.service.messaging.MessagingServiceCellet</class>
		</cellet>
		<cellet port="6000" jar="cellets/cube-service-multipointcomm-3.0.jar">
			<class>cube.service.multipointcomm.MultipointCommServiceCellet</class>
		</cellet>
		<cellet port="6000" jar="cellets/cube-service-conference-3.0.jar">
			<class>cube.service.conference.ConferenceServiceCellet</class>
		</cellet>
	</cellets>

	<!-- 适配器配置 -->
	<adapters>
		<adapter name="Contacts" host="127.0.0.1" port="6860">
		</adapter>
	</adapters>

</cell>
